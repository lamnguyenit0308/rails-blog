<!-- Image and text -->
<div class="container-fluid">
  <nav class="navbar navbar-light fixed-top">
    <a class="navbar-brand" href="<%= root_path %>">
      <h4 class="my-0">Blogger</h4>
    </a>
    <div>
      <div class="dropdown">
        <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
          <%= current_user.email %>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <li>
            <% if user_signed_in? %>
              <%= link_to "Sign Out", destroy_user_session_path, method: :delete, data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure delete this post?"
              }, class: "dropdown-item" %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</div>
